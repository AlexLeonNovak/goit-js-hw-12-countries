<article class="card">
  <h2 class="card__name">{{name}}</h2>

  <div class="card__content">
    <img
      src="{{flag}}"
      alt="{{name}}"
      class="card__image"
    />
    <div class='card__desc'>
      <p class="card__desc-item">
        <strong>Capital: </strong>
        {{capital}}
      </p>
      <p class="card__desc-item">
        <strong>Population: </strong>
        {{population}}
      </p>
      <p class="card__desc-item">
        <strong>Languages: </strong>
        <ul>
          {{#each languages}}
            <li>{{this.name}}</li>
          {{/each}}
        </ul>
      </p>
    </div>
  </div>
</article>
